<html>
    <head>
       <title>
           <%= locals. title %>
       </title>
       <link rel="stylesheet" href="/css/home.css">
       <script src="https://kit.fontawesome.com/580655f985.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1 id="page-header">
            <i class="fas fa-address-book"></i>
            Contact Manager</h1>

        <div class="contacts">
                <% for (let i of contact_list) {%>
                   <div class="contact">
                      <div class="display_name"> <%= i.name %></div><br><br>
                      <div class="display_phone"><%= i.phone %></div>
                      <a href="/delete-Contact/?phone=<%= i.phone %>"><button class="delete_btn"><i class="fas fa-user-minus"></i></button></a>
                   </div>
                <%} %>
        </div>
        
        <div class="inputForm">
          <form action="/create-contact" method="POST" id="new-contact-form">
               <input type="text" name="name" id="name" placeholder="Name">
               <input type="number" name="phone" id="mob" placeholder="Phone">
               <button type="submit" id="btn">Add Contact</button>
           </form>  
        </div>    

        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>